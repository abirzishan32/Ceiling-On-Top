<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/pagebkg">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/input_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/app_name"
        app:titleTextColor="@android:color/white"

        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/input_house_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="House Name"
                android:textColor="@color/black"
                android:inputType="text" />

            <EditText
                android:id="@+id/input_house_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:inputType="text"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp" />

            <EditText
                android:id="@+id/input_num_rooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of Rooms"
                android:textColor="@color/black"
                android:inputType="number"
                android:layout_marginBottom="5dp" />

            <EditText
                android:id="@+id/input_num_washrooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of Washrooms"
                android:textColor="@color/black"
                android:inputType="number"
                android:layout_marginBottom="5dp" />
            <EditText
                android:id="@+id/input_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:textColor="@color/black"
                android:inputType="text"
                android:layout_marginBottom="5dp" />


            <ImageView
                android:id="@+id/house_image_view"
                android:layout_width="349dp"
                android:layout_height="150dp"
                android:src="@drawable/upload_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/upload_caption"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.6"
                    android:padding="7dp"
                    android:hint="Upload A Photo"
                    android:gravity="center"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/btn_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="uploadHouseInformation"
                android:text="Upload House Information"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>