<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select_role_bckg">

    <RelativeLayout
        android:id="@+id/center_horizontal_ref_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
    </RelativeLayout>


    <ImageView
        android:id="@+id/txt_select_role"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:src="@drawable/select_role" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/id_typeofuser_admin_icon"
        android:layout_width="396dp"
        android:layout_height="329dp"
        android:layout_below="@+id/txt_select_role"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-81dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/select_buyer"></com.airbnb.lottie.LottieAnimationView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_seller"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/center_horizontal_ref_line"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-70dp"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/post_your_house"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="Seller"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"></TextView>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_buyer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/center_horizontal_ref_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/house_search"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="Buyer"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold">
        </TextView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>